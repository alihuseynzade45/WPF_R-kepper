        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_R_kiper.OrdersFile.View"
        mc:Ignorable="d"
        Title="Orders" Height="650" Width="900" Background="{StaticResource bck1}"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        AllowsTransparency="False" Style="{StaticResource OrdersWindowStyle}" >

    <Grid>

        <TabControl Background="{StaticResource bck1}">
