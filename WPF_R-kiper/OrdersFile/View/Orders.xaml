                            <Image Source="images/gobeleksorbasi2.png" Width="250" Height="250" Stretch="Fill"/>
                            <Label Margin="0,155,0,0" Content="GÖBƏLƏK ŞORBASI 5₼" Style="{StaticResource LabelAnimationStyle}"></Label>
                        </Grid>

                    </Button>
                    <Button Style="{StaticResource OrderModel}" Margin="10,280,0,0" Height="250" Width="250" Click="KoksorbasiBtn_Click">
