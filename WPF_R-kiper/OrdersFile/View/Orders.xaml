                <Grid>

                    <Button Style="{StaticResource OrderModel}" Margin="0,0,590,250" Height="250" Width="250" Click="KotletBtn_Click" >
                        <Grid>
                            <Image Source="images/kotlet.png" Width="250" Height="250" ></Image>
                            <Label Margin="0,155,0,0" Content="ƏT KOTLETLƏRİ 9₼" Style="{StaticResource LabelAnimationStyle}"></Label>
                        </Grid>
                    </Button>
                    
                    <Button Style="{StaticResource OrderModel}" Margin="10,0,0,250" Height="250" Width="250" Click="TavakabakiBtn_Click">
                        <Grid>
                            <Image Source="images/tavakababi.png" Width="250" Height="250" />
                            <Label Margin="0,155,0,0" Content="TAVA KABABI 14₼" Style="{StaticResource LabelAnimationStyle}"></Label>
                        </Grid>
                    </Button>
                    
                    <Button Style="{StaticResource OrderModel}" Margin="600,0,0,250" Height="250" Width="250" Click="QuzusoganetBtn_Click">
                        <Grid>
                            <Image Source="images/quzusoganet.png" Width="250" Height="250" />
                            <Label Margin="0,155,0,0" Content="QUZU SOĞAN 18₼" Style="{StaticResource LabelAnimationStyle}"></Label>
                        </Grid>
                    </Button>
                    
                    <Button Style="{StaticResource OrderModel}" Margin="0,280,300,0" Height="250" Width="250" Click="QuzubaldiriqovurmaBtn_Click">
