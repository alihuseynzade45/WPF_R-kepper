                    <Button  Style="{StaticResource OrderModel}" Margin="0,0,590,250" Height="250" Width="250" Click="WatermelonslushieBtn_Click">
                        <Grid>
                            <Image Source="images/watermelonslushie.png" Width="250" Height="250" Stretch="Fill" />
                            <Label Margin="0,155,0,0" Content="WATERMELON JUS 5₼" Style="{StaticResource LabelAnimationStyle}"></Label>
                        </Grid>
                    </Button>

                    
                    <Button Style="{StaticResource OrderModel}" Margin="10,0,0,250" Height="250" Width="250" Click="LechemilkshakeBtn_Click">
