<Window x:Class="WPF_R_kiper.CheckFile.View.Check"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_R_kiper.CheckFile.View"
        mc:Ignorable="d"
        Title="Check" Height="650" Width="400" Background="{StaticResource bck1}"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        AllowsTransparency="False" WindowStyle="ThreeDBorderWindow">
    
    
    <Grid Height="600" Width="400">
        <Image Source="images/bill.png" Margin="0,0,0,180" Height="400" Width="400" Stretch="Fill" ></Image>

        <ListBox x:Name="lbCheck" Margin="0,0,0,250" Height="300" Width="260" BorderThickness="0" Background="Transparent"></ListBox>

        <ListBox x:Name="lbTotal" Margin="0,120,0,0" Height="40" Width="260" BorderThickness="0" ></ListBox>

        <Button x:Name="topla" Content="Cəm" Height="50" Width="100" Margin="150,320,0,0" Click="TotalBtn_Click" ></Button>

    </Grid>
</Window>
